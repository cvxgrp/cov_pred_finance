{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "automerge": true,
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "on friday before 3pm"
    ]
  },
  "pre-commit": {
    "enabled": true,
    "schedule": [
      "on the first day of the month before 6am"
    ],
    "packageRules": [
      {
        "groupName": "pre-commit hooks",
        "groupSlug": "pre-commit",
        "labels": [
          "pre-commit",
          "dependencies"
        ],
        "matchDepTypes": ["repository"]
      }
    ]
  },
  "labels": [
    "renovate"
  ]
}
